<%-include('../layouts/adminHeader')%>
<%-include('../layouts/adminSidebar')%>

<div class="pc-container" style="background-color: rgb(234, 230, 230);">
    <div class="pcoded-content">
        <div class="row">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Edit Product Details</h4>
                        <% if (errmsg.length > 0) { %>
                            <div class="alert alert-danger"><%= errmsg %></div>
                        <% } %>
                        <form action="/admin/editProduct?id=<%= productDetail._id %>" method="POST" onsubmit=" return validation()" >
                            <div class="form-body">
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-lg-2">Name</label>
                                        <div class="col-lg-10">
                                            <div class="row">
                                                <div class="col-md-11">
                                                    <input type="text" class="form-control" id="name" name="name"
                                                    placeholder="Enter Product Name" value="<%= productDetail.name %>">
                                                    <div id="nameContainer" class="text-danger"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-lg-2">Price</label>
                                        <div class="col-lg-10">
                                            <div class="row">
                                                <div class="col-md-11">
                                                    <input type="text" class="form-control" id="price" name="price"
                                                        placeholder="Enter Product Price" value="<%= productDetail.price %>">
                                                        <div id="priceContainer" class="text-danger"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-lg-2">Quantity</label>
                                        <div class="col-lg-10">
                                            <div class="row">
                                                <div class="col-md-11">
                                                    <input type="number" class="form-control" id="quantity" name="quantity"
                                                        placeholder="Enter Quantity" value="<%= productDetail.quantity %>">
                                                        <div id="quantityContainer" class="text-danger"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>                              

                                    <div class="form-group">
                                        <div class="row">
                                            <label class="col-lg-2">Category</label>
                                            <div class="col-lg-10">
                                                <div class="row">
                                                    <div class="col-md-11">
                                                        <div class="form-group mb-4">
                                                            <select class="custom-select mr-sm-2" id="category" name="category">
                                                                <option value="Choose..." disabled selected>Choose...</option>
                                                                <% categories.forEach((category) => { %>
                                                                    <option value="<%= category._id %>"
                                                                        <%= category._id.equals(productDetail.category) ? 'selected' : '' %>>
                                                                        <%= category.name %>
                                                                    </option>
                                                                <% }); %>
                                                            </select>
                                                            <div id="categoryContainer" class="text-danger"></div>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    


                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-lg-2">Description</label>
                                        <div class="col-lg-10">
                                            <div class="row">
                                                <div class="col-md-11">
                                                    <textarea class="form-control" rows="3" id="description" name="description"
                                                    placeholder="Text Here..."><%= productDetail.description %></textarea>
                                                    <div id="descriptionContainer" class="text-danger"></div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="row">
                                        <label class="col-lg-2">Images</label>
                                        <div class="col-lg-10">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <input type="file" class="form-control-file" id="Inputimage" multiple="multiple" accept="image/*" name="Inputimage">
                                                    <div id="imagePreview" class="d-flex flex-wrap mt-2">
                                                        <% for (let i = 0; i < productDetail.Inputimage.length; i++) { %>
                                                            <div class="image-wrapper mr-3 mb-3">
                                                                <button class="close-button" aria-label="Close alert" type="button" data-close >
                                                                    <span aria-hidden="true">&times;</span>
                                                                  </button>
                                                                 
                                                                <img style="height: 100px; max-width: 100px;" src="/IMAGES/<%= productDetail.Inputimage[i].filename %>" alt="Product Image">
                                                            </div>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Image Preview -->
                            <div id="imagePreview" class="mt-3 thumbnail-container"></div>
                            <!-- Image Preview end -->
                            <div class="form-actions">
                                <div class="text-right">
                                    <button type="submit" class="btn btn-info">Save Changes</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>   
</div>
<script>
function previewImage(input, previewElement) {
    const preview = document.getElementById(previewElement);
    preview.innerHTML = '';

    if(input.files){
            Array.from(input.files).forEach(file=>{
                const reader = new FileReader();
                reader.onload = function(e){
                    const img = document.createElement('img')
                    img.src = e.target.result;
                    img.style.maxWidth = '100px';
                    img.style.maxHeight = '100px';
                    preview.appendChild(img)
                    

                    const cropper=new Cropper(img,{
                        aspectRatio:1,
                        viewMode:2,
                        crop:function(event){
                            const canvas=document.getElementById('croppedImageCanvas')
                            const context=canvas.getContext('2d')
                            canvas.width=event.detail.width;
                            canvas.height=event.detail.height;
                            context.drawImage(img,event.detail.x,event.detail.y,event.detail.width,event.detail.height,0,0,canvas.width,canvas.height)

                            canvas.toBlob(blob => {
                                const croppedImageInput = document.createElement('input');
                                croppedImageInput.type = 'hidden';
                                croppedImageInput.name = 'croppedImages';
                                croppedImageInput.value = URL.createObjectURL(blob);
                                preview.appendChild(croppedImageInput);
                            }, 'image/jpeg');
                        }

                    })
                }
                reader.readAsDataURL(file)
            })
        }
}

document.getElementById('Inputimage').addEventListener('change', function() {
    previewImage(this, 'imagePreview');
});

    
</script>
<script>
    function validation() {
        const category = document.getElementById('category').value;
        const errorCategory = document.getElementById('categoryContainer');

        errorCategory.innerText = '';

        if (category === "Choose...") {
            errorCategory.innerText = "Please select a valid category.";
            return false;
        }

        return true;
    }
</script>
    
<%-include('../layouts/adminFooter')%>
