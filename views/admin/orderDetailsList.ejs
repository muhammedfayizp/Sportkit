<%-include('../layouts/adminHeader')%>
    <%-include('../layouts/adminSidebar')%>
    <div class="pc-container" style="background-color: rgb(234, 230, 230);">
        <div class="pcoded-content">
            <div class="row">
                <div class="col-md-6 col-xl-6 mb-4">
                    <div class="card">
                        <div class="card-header text-center">Order Details</div>
                        <div class="row g-2">
                            <div class="col-xl-6 col-lg-8 col-md-10 col-sm-12 mx-auto ">
                                <div class="card-body d-flex justify-content-center">
                                    <h6>Delivery Address</h6>
                                </div>
                                    <div class="ml-3">
                                        <% if (orders && orders.length > 0) { %>
                                            <% orders.forEach(order => { %>
                                                <% if (order.addressDetails ) { %>
                                                        <p> <%= order.addressDetails.name %></p>
                                                        <p> <%= order.addressDetails.pincode %></p>
                                                        <p> <%= order.addressDetails.state %></p>
                                                        <p> <%= order.addressDetails.dist %></p>
                                                        <p><%= order.addressDetails.city %></p>
                                                        <p> <%= order.addressDetails.houseName %></p>
                                                        <p> <%= order.addressDetails.houseNo %></p>
                                                    
                                                <% } %>
                                            <% }) %>
                                        <% } else { %>
                                            <p>No orders found.</p>
                                        <% } %>
                                </div>
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body d-flex justify-content-center">
                                    <h6>Order info</h6>
                                </div>
                                <div>
                                    <% if (orders && orders.length > 0) { %>
                                        <% orders.forEach(order => { %>
                                            <p><%= order.currentDate %></p>
                                            <p>Order Id : <%= order.orderId %></p>
                                            <p>Payment Method : <%= order.PaymentMethod %></p>
                                            <% if (order.UserId) { %>
                                                <p>Mobile: <%= order.UserId.mobile %></p>
                                                <p><%= order.UserId.email %></p>
                                            <% } %>
                                        <% }); %>
                                    <% } %>
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-xl-6">
                    <div class="card">
                        <div class="card-header">My Orders</div>
                            <% if (orders && orders.length > 0) { %> 
                                <% orders.forEach(order => { %>
                                    <div>
                                        <table class="table table-cart table-mobile">
                                            <tbody>
                                                <% order.items.forEach(item => { %>
                                                    <tr>
                                                        <td>
                                                            <img src="/IMAGES/<%= item.productId.Inputimage[0].filename %>" alt="product image" style="max-width: 60px; max-height: 60px;">
                                                        </td>
                                                        <td data-label="Product Name"><%= item.productId.name %></td>
                                                        <td class="price-col" data-label="Price">$<%= order.totalAmount %></td>
                                                        <td data-label="Quantity">Qty : <%= item.quantity %></td>
                                                        <td data-label="Payment Method"><%= order.PaymentMethod %></td>
                                                        
                                                    </tr>
                                                <% }) %>
                                                <%order.items.forEach(item=>{%>
                                                    <% if(item.status == 'Delivered'&& order.approvel == 1) { %>
                                                        <td colspan="5" class="text-center">
                                                            <p>Reason : <%= item.reason %></p>
                                                            <button class="btn btn-success" onclick="approvelfun('<%= order._id %>','<%= item.productId._id %>')">approve</button>
                                                            <button class="btn btn-dark" onclick="declinefun('<%= order._id %>','<%= item.productId._id %>')">decline</button>
                                                        </td>
                                                    <% } %>
                                                <%})%> 
                                            </tbody>
                                        </table>
                                    </div>
                                    <hr>
                                <% }) %>
                            <% } else { %>
                                <p>Your order history is empty.</p>
                            <% } %>
                        </div>
                </div>
                
            </div>
        </div>
        </div>
    </div>        

    <script>
        function approvelfun(orderId,productId){
            Swal.fire({
                title:'Are You Sure ?',
                icon:'question',
                showCancelButton:true,
                confirmButtonColor:'#3085d6',
                cancelButtonColor:'#d33',
                confirmButtonText:`Yes`
            })
            .then((result) => {
                if(result.isConfirmed){
                    fetch('/admin/returnApproved',{
                        method:'POST',
                        headers:{
                            'Content-Type':'application/json'
                        },
                        body:JSON.stringify({orderId,productId})
                    })
                    .then(response=>response.json())
                    .then(data=>{
                        if (data.success) {
                            Swal.fire(
                                'Approved',
                                'Return request successfully approved',
                                'success'
                            )
                            .then(()=>{
                                window.location.reload()
                            })
                        }
                    })
                }
            })
        }
    </script>

    <script>
        function declinefun(orderId,productId){
            Swal.fire({
                title:'Are You Sure ?',
                icon:'question',
                showCancelButton:true,
                confirmButtonColor:'#3085d6',
                cancelButtonColor:'#d33',
                confirmButtonText:`Yes`
            })
            .then((result)=>{
                if(result.isConfirmed){
                    fetch('/admin/returnDeclined',{
                        method:'POST',
                        headers:{
                            'Content-Type':'application/json'
                        },
                        body:JSON.stringify({orderId,productId})
                    })
                    .then(response=>response.json())
                    .then(data=>{
                        if(data.success){
                            Swal.fire(
                                'Declined',
                                'Return request has been declined',
                                'success'
                            )
                            .then(()=>{
                                window.location.reload()
                            })
                        }
                    })
                }
            })
        }
    </script>
    <%- include('../layouts/adminFooter') %>
