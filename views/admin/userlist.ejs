<%-include('../layouts/adminHeader')%>
    <%-include('../layouts/adminSidebar')%>
    <div class="pc-container" style="background-color: rgb(234, 230, 230);">
        <div class="pcoded-content">
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Users List</h5>
                            </div>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="index.html">Home</a></li>
                                <li class="breadcrumb-item">Users List</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
                <div class="row">
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body ">
                                <h4 class="card-title">Customer Details</h4>
                                <div class="table-responsive">
                                    <table class="table">
                                        <thead>
                                            <tr>
                                                <th scope="col">ID</th>
                                                <th scope="col">Name</th>
                                                <th scope="col">Mobile</th>
                                                <th scope="col">Email</th>
                                                <th scope="col">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <% if (Array.isArray(users) && users.length> 0) { %>
                                                <% users.map(function(usersDa,index) { %>
                                                    <tr>
                                                        <td>
                                                            <%= index+1 %>
                                                        </td>
                                                        <td>
                                                            <%= usersDa.name %>
                                                        </td>
                                                        <td>
                                                            <%= usersDa.mobile %>
                                                        </td>
                                                        <td>
                                                            <%= usersDa.email %>
                                                        </td>
                                                       
                                                        <td>
                                                            <% if (usersDa.is_verified === 1) { %>
                                                                <button type="button" style="width: 80px;" class="btn btn-dark" value="Block" onclick="confirmAction('<%= usersDa._id %>')">Block</button>
                                                            <% } else { %>
                                                                <button type="button" style="width: 80px;" class="btn btn-success" value="Unblock" onclick="confirmAction('<%= usersDa._id %>')">Unblock</button>
                                                            <% } %>
                                                        </td>
                                                    </tr>
                                                    <% }); %>
                                                        <% } else { %>
                                                            <tr>
                                                                <td colspan="5">users Not available</td>
                                                            </tr>
                                                            <% } %>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

                        <script>
                            function confirmAction(usersDa) {
                                Swal.fire({
                                title: 'Are you sure?',
                                icon:'question',
                                showCancelButton:true,
                                confirmButtonColor:'#3085d6',
                                cancelButtonColor:'#d33',
                                confirmButtonText:`Yes`,

                            }).then((result)=>{
                                if(result.isConfirmed){
                                    fetch(`/admin/block?userid=${usersDa}`)
                                    .then(response => response.json())
                                    .then(data => {
                                
                                    if(data.success){     
                                        window.location.reload()                     
                                        // $('#main-id').load('/admin/userlist #main-id' )
                                    }
                                
                                    })
                                    .catch(error => {
                                    console.error('Fetch error:', error);
                                    });
                                }
                            })
                    }
                        </script>
                        <%-include('../layouts/adminFooter')%>