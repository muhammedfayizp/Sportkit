            <div class="container" style="display: flex; justify-content: right; margin-top:30x;">
                <a href="#" class="btn btn-dark" data-toggle="modal" data-target="#offerModal">Add New Coupon+</a>
            </div>

          
            

            
            
            <script>
            function couponadding() {
                let discount = $('#discount').val();
                let minimumPrice = $('#minimum-price').val();
                let expiryDate = $('#coupon-Expiry-Date').val();
                let currentDate = new Date().toISOString().split('T')[0]; 
                let errorMessage = $('#error-message');
                errorMessage.text('');

                if (!minimumPrice || !discount || !expiryDate) {
                    errorMessage.text('All fields are empty.');
                    return;
                }

                if (minimumPrice <= 0 || discount <= 0) {
                    errorMessage.text('Minimum price and discount must be positive numbers.');
                    return;
                }

                if (discount >= 70) {
                    errorMessage.text('Discount should be between 5 and 70.');
                    return;
                }

                if (expiryDate <= currentDate) {
                    errorMessage.text('Expiry date must be in the future.');
                    return;
                }

            
                fetch('/admin/addCoupon', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        discount,
                        minimumPrice,
                        expiryDate
                    })
                })
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        Swal.fire(
                            'Success',
                            'Coupon successfully added',
                            'success'
                        ).then(() => {
                            window.location.reload();
                        });
                    }
                })
                .catch(error => {
                    console.log('Error',error);
                });
            }
            </script>
            
            
