    <div class="pc-container" style="background-color: rgb(234, 230, 230);">
        <div class="pcoded-content">
            <div class="page-header">
                <div class="page-block">
                    <div class="row align-items-center">
                        <div class="col-md-6">
                            <div class="page-header-title">
                                <h5 class="m-b-10">Coupon</h5>
                            </div>
                            <ul class="breadcrumb">
                                <li class="breadcrumb-item"><a href="/admin/dashboard">Dashboard</a></li>
                                <li class="breadcrumb-item">coupon</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
           
            <div class="modal fade" id="offerModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">New Coupon</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <!-- Your form or content for the new offer goes here -->
                            <form id="coupon-form">
                                <div id="error-message" style="color: red; margin-bottom: 10px;"></div> <!-- Error message container -->
                        
                                <div class="form-group">
                                    <label for="minimum-price">Minimum</label>
                                    <input type="number" class="form-control" id="minimum-price" placeholder="Enter the Minimum price">
                                </div>
                                <div class="form-group">
                                    <label for="discount">Discount</label>
                                    <input type="number" class="form-control" id="discount" placeholder="Enter the discount">
                                </div>
                                <div class="form-group">
                                    <label for="coupon-Expiry-Date">Offer Expiry Date</label>
                                    <input type="date" class="form-control" id="coupon-Expiry-Date" placeholder="Enter Expiry Date">
                                </div>
                                <!-- Add more form fields as needed -->
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                                    <button type="button" onclick="couponadding()" class="btn btn-primary">Save Offer</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container" style="margin-top: 40px;">
                <div class="card">
                    <h4 class="card-title p-3">Coupons</h4>
                    <% if (coupons && coupons.length > 0) { %>
                        <div class="row">
                            <% coupons.forEach((item, index) => { %>
                                <div class="col-lg-4 col-md-6 mb-4 d-flex flex-column align-items-center">
                                    <div class="card-body">
                                        <div class="text-center">
                                            <div class="d-flex flex-row text-center">
                                                <div class="d-flex flex-column text-center text-white ">
                                                    <span>min purchase:</span>
                                                    <span>â‚¹<%= item.minimumPrice %></span>
                                                </div>
                                                <div class="d-flex flex-column ml-1">
                                                    <h1 class="mb-0 percent pl-5"><%= item.discount %>%</h1>
                                                    <span class="discount pl-5">Discount</span>
                                                </div>
                                            </div>
                                        </div>
                                        <hr class="line">
                                        <div class="copy-button">
                                            <div class="input-container">
                                                <input id="copyvalue-<%= index %>" type="text" readonly value="<%= item.couponCode %>" >
                                                <button onclick="copyIt('<%= index %>')" class="copybtn">COPY</button>
                                            </div>
                                        </div>
                                        <div class="d-flex justify-content-between align-items-center mt-4">
                                            <span id="status-<%= item._id %>" class="text-white"><%= item.is_active ? 'Active' : 'Inactive' %></span>
                                            <div class="form-check form-switch">
                                                <input class="form-check-input" type="checkbox" id="flexSwitchChecked-<%= item._id %>" value="<%= item._id %>" <%= item.is_active ? 'checked' : '' %>>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col-6 mt-3">
                                                <a id="updateLink<%= item._id %>" class="update-link" data-coupon-id="<%= item._id %>" data-minimum-price="<%= item.minimumPrice %>" data-discount="<%= item.discount %>" data-expiry-date="<%= item.expiryDate.toISOString().split('T')[0] %>">Update</a>
                                            </div>
                                            <div class="col-6">
                                                <p class="d-flex justify-content-end mt-3">Exp: <%= new Date(item.expiryDate).toLocaleString('en-IN', { year: 'numeric', month: '2-digit', day: '2-digit' }) %></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="modal fade" id="updateModal<%= item._id %>" tabindex="-1" role="dialog" aria-labelledby="updateModalLabel<%= item._id %>" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="updateModalLabel<%= item._id %>">Update Item</h5>
                                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <form class="update-form" data-coupon-id="<%= item._id %>">
                                                    <div id="update-error-message-<%= item._id %>" style="color: red; margin-bottom: 10px;"></div> 
                                                    <div class="form-group">
                                                        <label for="input1">Minimum Price</label>
                                                        <input type="text" class="form-control" id="input1" name="minimumPrice" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="input2">Discount</label>
                                                        <input type="text" class="form-control" id="input2" name="discount" required>
                                                    </div>
                                                    <div class="form-group">
                                                        <label for="input3">Expiry Date</label>
                                                        <input type="date" class="form-control" id="input3" name="expiryDate" required>
                                                    </div>
                                                    <button type="submit" class="btn btn-primary">Update</button>
                                                </form>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination m-3">
                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                    <a class="page-link page-link-prev" href="?page=<%= currentPage - 1 %>" aria-label="Previous">
                                        <span aria-hidden="true"><i class="icon-long-arrow-left"></i></span> Prev
                                    </a>
                                </li>
                                <% for (let i = 1; i <= totalPages; i++) { %>
                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                        <a class="page-link" href="?page=<%= i %>"><%= i %></a>
                                    </li>
                                <% } %>
                                <li class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                    <a class="page-link page-link-next" href="?page=<%= currentPage + 1 %>" aria-label="Next">
                                        Next <span aria-hidden="true"><i class="icon-long-arrow-right"></i></span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    <% } else { %>
