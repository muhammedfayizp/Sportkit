            <script>
                function copyIt(index) {
                    let copyInput = document.querySelector('#copyvalue-' + index);
                    copyInput.select();
                    document.execCommand("copy");
                    let copybtn = copyInput.nextElementSibling;
                    copybtn.textContent = "COPIED";
                }
            </script>

            <script>
                document.querySelectorAll('.form-check-input').forEach(checkbox => {
                    checkbox.addEventListener('change', () => {
                        const couponId = checkbox.getAttribute('value');
                        const isChecked = checkbox.checked;
                        fetch('/admin/statusChecked', { 
                            method: 'POST',
                            headers: {
                                'Content-Type': 'application/json'
                            },
                            body: JSON.stringify({ isChecked, couponId })
                        })
                        .then(response => response.json())
                        .then(data => {
                            const statusElement = document.getElementById(`status-${couponId}`);
                            if (data.success) {
                                statusElement.textContent = isChecked ? 'Active' : 'Inactive';
                                Swal.fire('Success', `Coupon is ${isChecked ? 'active' : 'inactive'}`, 'success');
                            } else {
                                Swal.fire('Error', 'Coupon status change failed', 'error');
                            }
                        })
                        .catch(error => {
                            console.error(error);
                        });
                    });
                });
            </script>

            <script>
                document.addEventListener("DOMContentLoaded", function() {
                    const updateLinks = document.querySelectorAll('[id^="updateLink"]');
                    updateLinks.forEach(link => {
                        link.addEventListener('click', function(event) {
                            event.preventDefault();

                            const couponId = this.getAttribute('data-coupon-id');
                            const minimumPrice = this.getAttribute('data-minimum-price');
                            const discount = this.getAttribute('data-discount');
                            const expiryDate = this.getAttribute('data-expiry-date');

                            const modal = document.getElementById('updateModal' + couponId);
                            const input1 = modal.querySelector('#input1');
                            const input2 = modal.querySelector('#input2');
                            const input3 = modal.querySelector('#input3');

                            input1.value = minimumPrice;
                            input2.value = discount;
                            input3.value = expiryDate;

                            const modalInstance = new bootstrap.Modal(modal);
                            modalInstance.show();
                        });
                    });

                    const updateForms = document.querySelectorAll('.update-form');
                    updateForms.forEach(form => {
                        form.addEventListener('submit', function(event) {
                            event.preventDefault();

                            const couponId = form.getAttribute('data-coupon-id');                            
                            const minimumPrice = this.querySelector('#input1').value;
                            const discount = this.querySelector('#input2').value;
                            const expDate = this.querySelector('#input3').value;

                            const errorMessageContainer = form.querySelector('#update-error-message-' + couponId);
                            errorMessageContainer.textContent = '';

                            if (!minimumPrice || !discount || !expDate) {
                                errorMessageContainer.textContent = 'All fields are required.';
                                return;
                            }
                            if (minimumPrice <= 0 || discount <= 0) {
                                errorMessageContainer.textContent = 'Minimum price and discount must be positive numbers.';
                                return;
                            }
                            if (discount >= 70) {
                                errorMessageContainer.textContent = 'Discount should be between 5 and 70.';
                                return;
                            }
                            let currentDate = new Date().toISOString().split('T')[0];
                            if (expDate <= currentDate) {
                                errorMessageContainer.textContent = 'Expiry date must be in the future.';
                                return;
                            }

                            fetch('/admin/editCoupon', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json'
                                },
                                body: JSON.stringify({
                                    couponId,
                                    minimumPrice,
                                    discount,
                                    expDate
                                })
                            }).then(response => response.json())
                            .then(data => {
                                if (data.success) {
                                    Swal.fire(
                                        'Success',
                                        'Coupon edited successfully',
                                        'success'
                                    ).then(() => {
                                        window.location.reload();
                                    });
                                } else {
                                    Swal.fire(
                                        'Failed',
                                        'Coupon editing failed',
                                        'error'
                                    );
                                }
                            });

                            const modalInstance = bootstrap.Modal.getInstance(this.closest('.modal'));
                            modalInstance.hide();
                        });
                    });
                });
            </script>
