    .offer-price {
        color: red;
    }
    .original-price {
        text-decoration: line-through;
    }

    .banner-lg video {
        width: 100%;
        height: 100%;
    }

    .product-action a {
        display: block;
        margin-top: 10px;
    }

    .video-container video {
