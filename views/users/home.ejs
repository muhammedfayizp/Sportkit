                                </div><!-- End .product-price -->
                            <% } else { %>
                                <div class="product-price mt-2">
                                    ₹<%= product.price %>
                                </div><!-- End .product-price -->
                            <% } %>
                        </div>
                    </div>
                </div>
                <% }) %>
