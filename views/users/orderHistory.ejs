<%-include('../layouts/header')%>
<%-include('../layouts/navbar')%>
<style type="text/css">
    body {
        background-color: #cad1dc;
        color: #333639;
    }

    .img-account-profile {
        height: 10rem;
    }

    .rounded-circle {
        border-radius: 50% !important;
    }

    .card {
        box-shadow: 0 0.15rem 1.75rem 0 rgb(33 40 50 / 15%);
    }

    .card .card-header {
        font-weight: 500;
    }

    .card-header:first-child {
        border-radius: 0.35rem 0.35rem 0 0;
    }

    .card-header {
        padding: 1rem 1.35rem;
        background-color: rgba(33, 40, 50, 0.03);
        border-bottom: 1px solid rgba(7, 8, 9, 0.125);
    }

    .table,
    .table-responsive {
        width: 100%;
        line-height: 1;
        color: #69707a;
        background-color: #fff;
        background-clip: padding-box;
        border: 1px solid #2d2c2c;
        -webkit-appearance: none;
        -moz-appearance: none;
        appearance: none;
        border-radius: 0.35rem;
        transition: border-color 0.15s ease-in-out, box-shadow 0.15s ease-in-out;
    }

    .nav-borders .nav-link.active {
        color: #0061f2;
        border-bottom-color: #0061f2;
    }

    .nav-borders .nav-link {
        color: #69707a;
        border-bottom-width: 0.125rem;
        border-bottom-style: solid;
        border-bottom-color: transparent;
        padding-top: 0.5rem;
        padding-bottom: 0.5rem;
        padding-left: 0;
        padding-right: 0;
        margin-left: 1rem;
        margin-right: 1rem;
    }

    @media (max-width: 767.98px) {
        .table td,
        .table th {
            display: block;
            text-align: center;
        }

        .table td:before {
            content: attr(data-label);
            position: absolute;
            left: 0;
            padding-left: 15px;
            font-weight: bold;
            text-align: left;
        }
    }

    .table-cart {
        border: none;
    }

    .table-cart tbody tr {
        border-bottom: 1px solid #2d2c2c;
    }

    .table-cart tbody tr:last-child {
        border-bottom: none;
    }

    .order-date {
        text-align: center;
        margin-top: 1rem;
    }
</style>


    <div class="container-xl px-4 mt-4 mb-5">
        <nav class="nav nav-borders">
            <a class="nav-link" href="/userProfile" target="__blank">Profile</a>
            <a class="nav-link" href="/addressList" target="__blank">Address</a>
            <a class="nav-link" href="/wallet" target="__blank">Wallet</a>
            <a class="nav-link" href="/coupon" target="__blank">Coupons</a>
            <a class="nav-link active ms-0" href="/orderHistoryList" target="__blank">Order History</a>
        </nav>
        <div class="row">
            <div class="col-md-6 col-xl-4 mb-4">
                <div class="card">
                    <div class="card-header">Profile Picture</div>
                    <div class="card-body d-flex justify-content-center">
                        <img class="img-account-profile rounded-circle mb-2" src="http://bootdey.com/img/Content/avatar/avatar1.png" alt="">
                    </div>
                    <div class="text-center"><%= userData.name %></div>
                </div>
            </div>

            <div class="col-md-12 col-xl-8">
                <div class="card">
                    <div class="card-header">My Orders</div>
                    <div class="card-body">
                        <% if (orders && orders.length > 0) { %>
                            <% orders.forEach(order => { %>
                                <p class="order-date"><%= order.currentDate %></p>
                                <div class="table-responsive">
                                    <table class="table table-cart table-mobile table-striped">
                                        <tbody>
                                            <% order.items.forEach(item => { %>
                                                <tr>
                                                    <td class="col-2">
                                                        <img src="/IMAGES/<%= item.productId.Inputimage[0].filename %>" alt="product image" class="img-fluid" style="width: 100px; height: 100px;">
                                                    </td>
                                                    <td data-label="Product Name" class="col-4"><%= item.productId.name %></td>
                                                    <td data-label="Price" class="text-center col-2">₹<%= item.price %></td>
                                                    <td data-label="Quantity" class="text-center col-2">Qty: <%= item.quantity %></td>
                                                    <td data-label="Payment Method" class="text-center col-2"><%= order.PaymentMethod %></td>
                                                </tr>
                                            <% }) %>
                                            <tr>
                                                <td colspan="5" class="text-right">
                                                    <a href="/orderDetails?orderId=<%= order._id %>">
                                                        <button class="btn btn-primary">Order Details</button>
                                                    </a>
                                                    <strong class="mr-4">Total: ₹<%= order.totalAmount %></strong>
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            <% }) %>
                        <% } else { %>
                            <p>Your order history is empty.</p>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <%-include('../layouts/footbar') %>
    <%-include('../layouts/footer') %>

